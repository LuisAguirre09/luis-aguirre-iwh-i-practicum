doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title= title
    body 
        .form-wrapper
            p User: #{userEmail}
            a(href="/") Home
            form(method="POST")
                label(for="game") Video Game:
                input(type="text" name="game" required)
                br
                label(for="categoryGame") Category VideoGame:
                input(type="text" name="categoryGame" required)
                br
                label(for="dateGame") Date Game:
                input(type="date" name="dateGame" required)
                input(type="submit" value="Submit")  

